<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>WelcomeServlet</servlet-name>
        <servlet-class>controllers.WelcomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Alphabet</servlet-name>
        <servlet-class>controllers.Alphabet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Bangcuuchuong</servlet-name>
        <servlet-class>controllers.Bangcuuchuong</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BangcuuchuongX</servlet-name>
        <servlet-class>controllers.BangcuuchuongX</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WelcomeServlet</servlet-name>
        <url-pattern>/WelcomeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Alphabet</servlet-name>
        <url-pattern>/Alphabet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Bangcuuchuong</servlet-name>
        <url-pattern>/Bangcuuchuong</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BangcuuchuongX</servlet-name>
        <url-pattern>/BangcuuchuongX</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
